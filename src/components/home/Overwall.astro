---
import Section from '../shared/Section.astro';
import { overwall } from '@site';
---

<Section color="var(--bg-color)">
  <div class="overwall">
    {
      overwall.map((item) => (
        <article>
          <span>
            <h3>{item.amount}</h3>
            <p>{item.description}</p>
          </span>
        </article>
      ))
    }
  </div>
</Section>

<style lang="scss">
  @import '../../assets/breakpoints.scss';
  .overwall {
    max-width: var(--container-max-width);
    width: 100%;
    height: 100%;
    box-sizing: border-box;
    margin: 0 auto;
    display: grid;
    grid-template-columns: repeat(4, 1fr);
    gap: var(--grid-gap);
    @include screen('md') {
      grid-template-columns: repeat(2, 1fr);
    }
    article {
      display: flex;
      flex-direction: column;
      justify-content: center;
      text-align: left;
      color: var(--text-color);
      background-color: white;
      padding: var(--card-padding);
      border-radius: var(--border-radius);
      border: 1px solid var(--border-color);
      box-shadow: var(--shadow);
      span {
        display: flex;
        flex-direction: column;
        gap: 0.25rem;
        h2, h3 { 
          font-size: var(--title-size-lg); /* Tama√±o grande */
          font-weight: 600;
          text-wrap: balance;
          line-height: var(--title-line-height-xl);
          background: var(--bg-gradient-text);
          -webkit-background-clip: text;
          background-clip: text;
          -webkit-text-fill-color: transparent;
          user-select: none;
          width: fit-content; /* Asegura que el texto ocupe solo el espacio necesario */
        }
        p {
          font-size: var(--text-size);
          font-weight: 500;
          color: var(--text-color);
        }
      }
    }
  }
</style>
