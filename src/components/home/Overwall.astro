---
import Section from '../shared/Section.astro';
import { overwall } from '@site';
---

<Section color="var(--bg-color)">
  <div class="overwall">
    {
      overwall.map((item) => (
        <article>
          <span>
            <h1>{item.amount}</h1>
            <p>{item.description}</p>
          </span>
        </article>
      ))
    }
  </div>
</Section>

<style lang="scss">
  @import '../../assets/breakpoints.scss';
  .overwall {
    max-width: var(--container-max-width);
    width: 100%;
    height: 100%;
    box-sizing: border-box;
    margin: 0 auto;
    display: grid;
    grid-template-columns: repeat(4, 1fr);
    gap: var(--grid-gap);
    @include screen('sm') {
      grid-template-columns: repeat(2, 1fr);
    }
    article {
      display: flex;
      flex-direction: column;
      align-items: center;
      text-align: left;
      color: var(--text-color);

      &:first-child {
        align-items: flex-start;
      }
      &:last-child {
        align-items: flex-end;
      }
      @include screen('sm') {
        &:first-child,
        &:last-child {
          align-items: center;
        }
      }
      span {
        display: flex;
        flex-direction: column;
        align-items: center;
        gap: 0.75rem;
        h1 {
          font-size: var(--title-size-lg);
          font-weight: 600;
          text-wrap: balance;
          max-width: 500px;
          line-height: var(--title-line-height-xl);
          background: var(--bg-gradient-text);
          -webkit-background-clip: text;
          background-clip: text;
          -webkit-text-fill-color: transparent;
          user-select: none;
        }
        p {
          font-size: var(--text-size);
          font-weight: 500;
          color: var(--text-color);
          text-align: center;
        }
      }
    }
  }
</style>
