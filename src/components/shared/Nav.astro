---
import { nav } from '@site';
import IconMenu from '../icons/IconMenu.astro';
import IconClose from '../icons/IconClose.astro';
---

<nav>
  <div class="wrapper">
    <div class="logo">
      <a href="/">
        <img src="/images/logo.webp" alt="logo firmeasy" />
      </a>
      <a href="/repository" class="verified">
        <img
          src="/images/verifiedSunat.svg"
          alt="verificado firmeasy"
        />
      </a>
    </div>
    <input type="checkbox" id="menu" class="menu-button" />
    <div class="menu">
      <ul>
        {
          nav.menu.map((item) => (
            <li>
              <a href={item.link}>{item.name}</a>
            </li>
          ))
        }
      </ul>
      <div class="actions">
        <a
          href={nav.button1.link}
          class="button outline transition-up">{nav.button1.text}</a
        >
        <a
          href={nav.button2.link}
          class="button gradient transition-up">{nav.button2.text}</a
        >
      </div>
      <label for="menu" class="menu-button">
        <i>
          <IconMenu />
        </i>
        <i>
          <IconClose />
        </i>
      </label>
    </div>
  </div>
</nav>
<style lang="scss">
  @import '../../assets/breakpoints.scss';
  nav {
    height: var(--nav-height);
    width: 100%;
    border-bottom: 1px solid var(--border-color);
    position: sticky;
    top: 0;
    background-color: white;
    z-index: 5;
    .wrapper {
      max-width: var(--container-max-width);
      width: 100%;
      height: 100%;
      padding: 0 var(--container-padding);
      box-sizing: border-box;
      margin: 0 auto;
      display: flex;
      align-items: center;
      justify-content: space-between;
      .logo {
        display: flex;
        align-items: center;
        gap: 0.25rem;
        @include screen('xsm') {
          align-items: flex-end;
          flex-direction: column;
          gap: 0;
        }
        & > a {
          padding-right: 0.25rem;
          & > img {
            height: 36px;
            @include screen('sm') {
              height: 28px;
            }
          }
          &:last-child {
            @include screen('xsm') {
              padding-right: .3rem;
            }
          }
        }
        .verified {
          // padding-top: 0.3rem;
          padding-left: 0.5rem;
          border-left: 1px solid var(--border-color);
          @include screen('xsm') {
            border-left: 0;
            padding-left: 0;
            margin-top: -0.4rem;
          }
          img {
            height: 1.5rem;
            @include screen('sm') {
              height: 1.2rem;
            }
            @include screen('xsm') {
              height: 0.75rem;
            }
          }
        }
      }

      .menu {
        display: flex;
        align-items: center;
        gap: 1.2rem;
        height: 100%;
        font-size: var(--text-size);
        font-weight: 500;
        @include screen('sm') {
          gap: 0.75rem;
        }
        ul {
          list-style: none;
          display: flex;
          align-items: center;
          height: 100%;
          gap: 1.2rem;
          @include screen('sm') {
            gap: 1rem;
          }
          @include screen('lg') {
            position: absolute;
            top: var(--nav-height);
            left: 0;
            width: 100%;
            height: auto;
            z-index: 10;
            background-color: white;
            border: 1px solid var(--border-color);
            padding: var(--container-padding);
            flex-wrap: wrap;
            box-shadow: var(--shadow);
            display: none;
            box-sizing: border-box;
          }
          li {
            a {
              color: var(--text-color);
              text-decoration: none;
            }
          }
        }
        .actions {
          display: flex;
          align-items: center;
          gap: 0.8rem;
          flex-wrap: nowrap;
          @include screen('sm') {
            & > a:nth-last-child(2) {
              display: none;
            }
          }
          // @media screen and (max-width: 375px) {
          //   & > a:nth-last-child(-n + 2) {
          //     // display: none;
          //   }
          // }
        }
        .menu-button {
          display: none;
          i {
            display: none;
            svg {
              width: 24px;
              height: 24px;
            }
          }
          @include screen('lg') {
            display: block;
            i {
              &:first-child {
                display: block;
              }
              &:last-child {
                display: none;
              }
            }
          }
        }
      }
      #menu {
        display: none;
        @include screen('lg') {
          &:checked ~ .menu {
            ul {
              display: flex;
            }
            .menu-button {
              i {
                &:first-child {
                  display: none;
                }
                &:last-child {
                  display: block;
                }
              }
            }
          }
        }
      }
    }
  }
</style>
