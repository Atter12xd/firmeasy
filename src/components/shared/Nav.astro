<style>
  nav {
    height: var(--nav-height);
    width: 100%;
    border-bottom: 1px solid var(--border-color);
    position: sticky;
    top: 0;
    background-color: white;
    z-index: 5;
    .wrapper {
      max-width: var(--container-max-width);
      width: 100%;
      height: 100%;
      padding: 0 var(--container-padding);
      box-sizing: border-box;
      margin: 0 auto;
      display: flex;
      align-items: center;
      justify-content: space-between;
      .logo {
        img {
          height: 32px;
        }
      }
      .menu {
        display: flex;
        align-items: center;
        gap: 1.5rem;
        height: 100%;
        font-size: var(--text-size);
        font-weight: 500;
        ul {
          list-style: none;
          display: flex;
          align-items: center;
          height: 100%;
          gap: 1.5rem;
          li {
            a {
              color: var(--text-color);
              text-decoration: none;
            }
          }
        }
        .actions {
          display: flex;
          align-items: center;
          gap: 1rem;
        }
      }
    }
  }
</style>
