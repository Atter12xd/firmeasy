---
import Section from './Section.astro';
import Title from './Title.astro';
import IconCheck from '../icons/IconCheck.astro';
import ChipRecommended from './ChipRecommended.astro';
import BackgroundPattern from './BackgroundPattern.astro';
---

<Section>
  <BackgroundPattern slot="bg" />
  <div class="pricing">
    <Title
      text="Precios y Planes"
      body="Puedes cancelar tu plan en cualquier momento."
