---
import Section from './Section.astro';
import Title from './Title.astro';
import BackgroundPattern from './BackgroundPattern.astro';
import Plan from './Plan.astro';

const period = 'monthly';
---

<script>
  // get the active span
  const $chipMontly: HTMLDivElement | null = document.querySelector(
    '#switch-period .switch-wrapper span:first-child'
  );
  const $chipYearly: HTMLDivElement | null = document.querySelector(
    '#switch-period .switch-wrapper span:last-child'
  );
  const $chipWeb: HTMLDivElement | null = document.querySelector(
    '#switch-type .switch-wrapper span:first-child'
  );
  const $chipApi: HTMLDivElement | null = document.querySelector(
    '#switch-type .switch-wrapper span:last-child'
  );
  // get all spans
  $chipMontly?.addEventListener('click', (e) => {
    $chipMontly.classList.add('active');
    $chipYearly?.classList.remove('active');
  });
  $chipYearly?.addEventListener('click', (e) => {
    $chipYearly.classList.add('active');
    $chipMontly?.classList.remove('active');
  });

  $chipWeb?.addEventListener('click', (e) => {
    $chipWeb.classList.add('active');
    $chipApi?.classList.remove('active');
  });
  $chipApi?.addEventListener('click', (e) => {
    $chipApi.classList.add('active');
    $chipWeb?.classList.remove('active');
  });
</script>

<Section>
  <BackgroundPattern slot="bg" />
  <div class="pricing">
    <Title
      text="Precios y Planes"
      body="Puedes cancelar tu plan en cualquier momento."
    />
    <div class="switch" id="switch-period">
      <div class="switch-wrapper">
        <span class="active">
          <p>Mensual</p>
        </span>
        <span>
          <p>Anualãƒ»<b>Ahorra 10%</b></p>
        </span>
      </div>
    </div>
    <div class="switch tiny" id="switch-type">
      <div class="switch-wrapper">
        <span class="active">
          <p>WEB</p>
        </span>
        <span>
          <p>API</p>
        </span>
      </div>
    </div>
    <div class="content">
      <Plan period="monthly" plan="personal" />
      <Plan period="monthly" plan="pro" recommended={true} />
      <Plan period="monthly" plan="enterprise" />
    </div>
  </div>
</Section>

<style>
  .pricing {
    .switch {
      margin: 0 auto;
      width: fit-content;
      min-width: 300px;
      margin-top: calc(var(--container-padding-y) / 4);
      background-color: white;
      &.tiny {
        min-width: 120px;

        .switch-wrapper {
          padding: 0.4rem;
          background-color: white;
          border: 1px solid var(--border-color);

          span {
            padding: 0.25rem;
            transition: all 0.3s ease-in-out;
            p {
              font-size: var(--text-size-sm);
              color: var(--text-color);
            }
            &:hover {
              background: rgba(255, 255, 255, 0.2);
            }
            &.active {
              background: var(--text-color);
              p {
                color: white;
              }
            }
          }
        }
      }
      .switch-wrapper {
        display: flex;
        background-color: var(--border-color-light);
        padding: 0.5rem;
        box-sizing: border-box;
        border-radius: 50px;
        gap: 0.25rem;
        span {
          flex: 1;
          flex-basis: 0;
          border-radius: 25px;
          padding: 0.5rem;
          box-sizing: border-box;
          display: flex;
          align-items: center;
          justify-content: center;
          cursor: pointer;
          transition: all 0.3s ease;
          p {
            font-weight: 500;
            font-size: var(--text-size);
            display: flex;
            align-items: center;
            b {
              opacity: 0.7;
              font-size: var(--text-size-sm);
              pointer-events: none;
            }
          }
          &:hover {
            background: var(--border-color-light);
          }
          &.active {
            background: var(--bg-gradient);
            color: white;
          }
        }
      }
    }
    .content {
      display: grid;
      grid-template-columns: repeat(3, 1fr);
      gap: var(--grid-gap);
      margin-top: calc(var(--container-padding-y) / 2);
    }
  }
</style>
