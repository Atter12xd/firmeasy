---
import { footer } from '@site';
---

<footer>
  <div class="wrapper">
    <div class="logo">
      <img src="/public/images/logo_dark.png" alt="logo firmeasy" />
    </div>
    <div class="menu">
      <ul>
        {
          footer.menu.map((item) => (
            <li>
              <a href={item.link}>{item.name}</a>
            </li>
          ))
        }
      </ul>
    </div>
    <span> Copyright Â© 2024. Firmeasy </span>
  </div>
</footer>
<style lang="scss">
  @import '../../assets/breakpoints.scss';
  footer {
    width: 100%;
    border-bottom: 1px solid var(--border-color);
    background-color: var(--dark-color);
    color: white;
    .wrapper {
      max-width: var(--container-max-width);
      width: 100%;
      height: 100%;
      padding: 2rem var(--container-padding);
      box-sizing: border-box;
      margin: 0 auto;
      display: flex;
      align-items: center;
      justify-content: space-between;
      gap: 1.5rem;
      flex-wrap: wrap;
      .logo {
        img {
          height: 32px;
          @include screen('sm') {
            height: 28px;
          }
        }
      }
      .menu {
        display: flex;
        align-items: center;
        gap: 1.5rem;
        height: 100%;
        font-size: var(--text-size);
        font-weight: 500;
        ul {
          list-style: none;
          display: flex;
          align-items: center;
          height: 100%;
          gap: 1.5rem;
          flex-wrap: wrap;
          li {
            a {
              color: white;
              text-decoration: none;
            }
          }
        }
      }
      span {
        font-size: var(--text-size);
        font-weight: 500;
        opacity: 0.7;
      }
    }
  }
</style>
