<style>
  .repository-list {
    display: flex;
    flex-direction: column;
    gap: var(--card-gap-sm);
    font-size: var(--text-size);
    color: var(--text-color);
    background-color: white;
    border: 1px solid var(--border-color);
    border-radius: var(--border-radius);
    box-shadow: var(--shadow);
    padding: var(--card-padding-y) var(--card-padding);
    max-width: var(--container-max-width-md);
    margin: auto;
    margin-top: calc(var(--container-padding-y) / 2);
    ul {
      display: flex;
      flex-direction: column;
      li {
        display: flex;
        align-items: center;
        gap: 1rem;
        padding: var(--card-padding) 0;
        border-bottom: 1px solid var(--border-color-light);
        &:first-child {
          padding-top: 0;
        }
        &:last-child {
          border-bottom: none;
          padding-bottom: 0;
        }
        i {
          background: white;
          display: flex;
          align-items: center;
          justify-content: center;
          width: 36px;
          height: 36px;
          border-radius: 50%;
          border: 1px solid var(--border-color);
          svg {
            width: 18px;
            height: 18px;
            path {
              fill: var(--text-color);
            }
          }
        }
        .repository-name {
          flex: 1;
          text-align: left;
          font-size: var(--text-size);
          font-weight: 500;
          display: flex;
          flex-direction: column;
          gap: 0.25rem;
          small {
            font-weight: 300;
          }
        }
      }
    }
  }
</style>
