---
import IconPdf from '../icons/IconPdf.astro';
import { repository } from '@site';
---

<section class="repository-list">
  {
    repository.files.map((file) => (
      <>
        <h1>{file.title}</h1>
        <ul>
          {file.list.map((item) => (
            <a target="_blank" href={item.link}>
              <i>
                <IconPdf />
              </i>
              <div class="repository-name">
                <p>{item.name}</p>
                <small>{item.description}</small>
              </div>
              <button class="outline">Ver archivo</button>
            </a>
          ))}
        </ul>
      </>
    ))
  }
</section>
<style lang="scss">
  @import '../../assets/breakpoints.scss';
  .repository-list {
    display: flex;
    flex-direction: column;
    // gap: var(--card-gap-sm);
    font-size: var(--text-size);
    color: var(--text-color);
    background-color: white;
    border: 1px solid var(--border-color);
    border-radius: var(--border-radius);
    box-shadow: var(--shadow);
    padding: var(--card-padding-y) var(--card-padding);
    max-width: var(--container-max-width-md);
    margin: auto;
    margin-top: calc(var(--container-padding-y) / 2);
    h1 {
      font-weight: 500;
      padding-bottom: 1rem;
      padding-top: 2rem;
      border-bottom: 1px solid var(--border-color-light);
      font-size: var(--text-size);
      &:first-of-type {
        padding-top: 0;
      }
    }
    ul {
      display: flex;
      flex-direction: column;
      a {
        display: flex;
        align-items: center;
        gap: 1rem;
        padding: var(--card-padding) 0;
        border-bottom: 1px solid var(--border-color-light);
        text-decoration: none;
        color: var(--text-color);
        // &:first-child {
        //   padding-top: 0;
        // }
        &:last-child {
          border-bottom: none;
          padding-bottom: 0;
        }
        i {
          background: white;
          display: flex;
          align-items: center;
          justify-content: center;
          width: 36px;
          height: 36px;
          border-radius: 50%;
          border: 1px solid var(--border-color);
        }
        .repository-name {
          flex: 1;
          text-align: left;
          font-size: var(--text-size);
          font-weight: 500;
          display: flex;
          flex-direction: column;
          gap: 0.25rem;
          small {
            font-weight: 300;
          }
        }
        & > button {
          pointer-events: none;
          @include screen('sm') {
            display: none;
          }
        }
      }
    }
  }
</style>
