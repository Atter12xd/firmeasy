---
import { getCollection, type CollectionEntry } from 'astro:content';
import ArticleLayout from '../../layouts/ArticleLayout.astro';
import type { ArticleType } from '../../components/blog/Articles.astro';

export async function getStaticPaths() {
  const blogEntries: CollectionEntry<ArticleType>[] = await getCollection('blog');
  return blogEntries.map((entry: CollectionEntry<ArticleType>) => ({
    params: { slug: entry.slug },
    props: { entry },
  }));
}

const { entry } = Astro.props;
const { Content } = await entry.render();
---

<ArticleLayout frontmatter={entry.data}>
  <Content />
</ArticleLayout>
